<?xml version="1.0" encoding="UTF-8"?>
<robot name="3wheels-robot">

  <link name='body'>
    <inertial>
      <mass value="1"/>
      <inertia ixx=".003"  ixy=".003"  ixz="0" iyy=".003" iyz="0" izz="0"/>
    </inertial>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius=".3" length=".05"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius=".3" length=".05"/>
      </geometry>
    </visual>
  </link>

  <link name='wheel01'>
    <inertial>
      <mass value=".2"/>
      <inertia ixx=".001"  ixy=".001"  ixz=".001" iyy=".001" iyz=".001" izz=".001"/>
    </inertial>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius=".05"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius=".05"/>
      </geometry>
    </visual>
  </link>

  <joint name="body-wheel01" type="continuous">
    <parent link="body"/>
    <child link="wheel01"/>
    <origin xyz="0 .2 -.03" rpy="0 0 0"/>
    <axis xyz="1 1 1"/>
  </joint>

  <link name='wheel02'>
    <inertial>
      <mass value=".2"/>
      <inertia ixx=".001"  ixy=".001"  ixz=".001" iyy=".001" iyz=".001" izz=".001"/>
    </inertial>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius=".05"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius=".05"/>
      </geometry>
    </visual>
  </link>

  <joint name="body-wheel02" type="continuous">
    <parent link="body"/>
    <child link="wheel02"/>
    <origin xyz="0.1732 -.1 -.03" rpy="0 0 0"/>
    <axis xyz="1 1 1"/>
  </joint>


  <link name='wheel03'>
    <inertial>
      <mass value=".2"/>
      <inertia ixx=".001"  ixy=".001"  ixz=".001" iyy=".001" iyz=".001" izz=".001"/>
    </inertial>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius=".05"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius=".05"/>
      </geometry>
    </visual>
  </link>

  <joint name="body-wheel03" type="continuous">
    <parent link="body"/>
    <child link="wheel03"/>
    <origin xyz="-0.1732 -.1 -.03" rpy="0 0 0"/>
    <axis xyz="1 1 1"/>
  </joint>

  <!-- Add controllers -->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/3wheels</robotNamespace>
    </plugin>
  </gazebo>

  <gazebo reference="body">
    <sensor type="ray" name="body-sensor">
      <pose>0 0 0 0 0 0</pose>
      <visualize>false</visualize>
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>100</samples>
            <resolution>1</resolution>
            <min_angle>-1</min_angle>
            <max_angle> 1</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.10</min>
          <max>20.0</max>
          <resolution>0.01</resolution>
        </range>
      </ray>
      <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
        <topicName>/laser/scan</topicName>
        <frameName>body</frameName>
      </plugin>
    </sensor>
  </gazebo>

  <gazebo reference="body">
    <sensor type="camera" name="camera1">
      <update_rate>30.0</update_rate>
      <camera name="head">
        <horizontal_fov>1.3962634</horizontal_fov>
        <image>
          <width>800</width>
          <height>800</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>300</far>
        </clip>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <alwaysOn>true</alwaysOn>
        <updateRate>0.0</updateRate>
        <cameraName>rrbot/camera1</cameraName>
        <imageTopicName>image_raw</imageTopicName>
        <cameraInfoTopicName>camera_info</cameraInfoTopicName>
        <frameName>camera_link</frameName>
        <hackBaseline>0.07</hackBaseline>
        <distortionK1>0.0</distortionK1>
        <distortionK2>0.0</distortionK2>
        <distortionK3>0.0</distortionK3>
        <distortionT1>0.0</distortionT1>
        <distortionT2>0.0</distortionT2>
      </plugin>
    </sensor>
  </gazebo>

</robot>
