<?xml version="1.0" encoding="UTF-8"?>
<robot name="armed3w" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find robot_utokyo)/urdf/armed3w.gazebo.xacro"/>

  <xacro:property name="body_height" value="0.4" />
  <xacro:property name="body_weight" value="1" />
  <xacro:property name="body_radius" value=".3" />
  <xacro:property name="wheel_weight" value=".2" />
  <xacro:property name="wheel_radius" value="0.05" />
  <xacro:property name="arm_length" value="0.6" />
  <xacro:property name="pi" value="3.1415926" />
  <xacro:property name="sensor_size" value=".1" />

  <xacro:macro name="wheel_link" params="wheel_name">
    <link name='${wheel_name}'>
      <inertial>
        <mass value="${wheel_weight}"/>
        <!-- # sphere: I = 2/5 * M * a^2 -->
        <inertia ixx="${2/5 * wheel_weight * wheel_radius * wheel_radius}"
          ixy="0"  ixz="0"
          iyy="${2/5 * wheel_weight * wheel_radius * wheel_radius}" iyz="0"
          izz="${2/5 * wheel_weight * wheel_radius * wheel_radius}"/>
      </inertial>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <sphere radius="${wheel_radius}"/>
        </geometry>
      </collision>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <sphere radius="${wheel_radius}"/>
        </geometry>
      </visual>
    </link>
  </xacro:macro>

  <xacro:macro name="arm" params="arm_name joint_origin_x">
    <joint name="body_${arm_name}" type="continuous">
      <parent link="body"/>
      <child link="${arm_name}"/>
      <origin xyz="${joint_origin_x} 0 .2" rpy="${pi / 2} 0 0"/>
      <axis xyz="1 0 0"/>
    </joint>

    <link name="${arm_name}">
      <inertial>
        <mass value=".1"/>
        <!-- #cylinder Izz = 1/2 * M * r^2 -->
        <!-- #cylinder Iyy = Ixx = 1/12 * M * l^2 -->
        <inertia ixx=".003"  ixy="0"  ixz="0" iyy=".003" iyz="0" izz=".000045"/>
      </inertial>
      <collision>
        <origin xyz="0 0 -.3" rpy="0 0 0"/>
        <geometry>
          <cylinder radius=".03" length="${arm_length}"/>
        </geometry>
      </collision>
      <visual>
        <origin xyz="0 0 -.3" rpy="0 0 0"/>
        <geometry>
          <cylinder radius=".03" length="${arm_length}"/>
        </geometry>
      </visual>
    </link>

    <transmission name="body_${arm_name}_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="body_${arm_name}">
        <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
      </joint>
      <actuator name="body_${arm_name}_motor">
        <hardwareInterface>VelocityJointInterface</hardwareInterface>
        <mechanicalReduction>30</mechanicalReduction>
      </actuator>
    </transmission>
  </xacro:macro>

  <link name="base_footprint"/>

  <!-- Robot Body -->
  <joint name="base_link_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="body"/>
    <origin xyz="-4 4 0" rpy="0 0 ${pi}"/>
  </joint>

  <link name='body'>
    <inertial>
      <mass value="${body_weight}"/>
      <!-- #cylinder Izz = 1/2 * M * r^2
      #cylinder Iyy = Ixx = 1/12 * M * l^2 -->
      <inertia
        ixx="${body_weight * body_height * body_height / 12}"  ixy="0"  ixz="0"
        iyy="${body_weight * body_height * body_height / 12}" iyz="0"
        izz="${body_weight * body_radius * body_radius / 2}"/>
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="${body_radius}" length="${body_height}"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="${body_radius}" length="${body_height}"/>
      </geometry>
    </visual>
  </link>


  <joint name="body_wheelFront" type="fixed">
    <parent link="body"/>
    <child link="wheelFront"/>
    <origin xyz="0 .2 ${- body_height / 2 - wheel_radius / 2}" rpy="0 0 0"/>
  </joint>
  <xacro:wheel_link wheel_name="wheelFront"/>

  <joint name="body_wheelRight" type="continuous">
    <parent link="body"/>
    <child link="wheelRight"/>
    <origin xyz="0.1732 -.1 ${- body_height / 2 - wheel_radius / 2}" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
  </joint>
  <xacro:wheel_link wheel_name="wheelRight"/>

  <joint name="body_wheelLeft" type="continuous">
    <parent link="body"/>
    <child link="wheelLeft"/>
    <origin xyz="-0.1732 -.1 ${- body_height / 2 - wheel_radius / 2}" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
  </joint>
  <xacro:wheel_link wheel_name="wheelLeft"/>

  <xacro:arm arm_name="armRight" joint_origin_x=".3"/>
  <xacro:arm arm_name="armLeft" joint_origin_x="-.3"/>


  <!-- controller start-->
  <transmission name="body_wheelRight_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="body_wheelRight">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="body_wheelRight_motor">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
      <mechanicalReduction>30</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="body_wheelLeft_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="body_wheelLeft">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="body_wheelLeft_motor">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
      <mechanicalReduction>30</mechanicalReduction>
    </actuator>
  </transmission>
  <!-- controller end-->

  <joint name="camera_joint" type="fixed">
    <origin xyz="0 -.4 0" rpy="0 0 0"/>
    <parent link="body"/>
    <child link="camera"/>
  </joint>

  <link name="camera">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${sensor_size} ${sensor_size} ${sensor_size}"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${sensor_size} ${sensor_size} ${sensor_size}"/>
      </geometry>
      <material name="green"/>
    </visual>

    <inertial>
      <mass value=".01" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <box_inertia m=".01" x=".1" y=".1" z=".1" />
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>


  <joint name="hokuyo_joint" type="fixed">
    <origin xyz="0 0 ${body_height / 2 + sensor_size / 2}" rpy="0 0 -1.570796"/>
    <parent link="body"/>
    <child link="hokuyo"/>
  </joint>

  <!-- Hokuyo Laser -->
  <link name="hokuyo">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${sensor_size} ${sensor_size} ${sensor_size}"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${sensor_size} ${sensor_size} ${sensor_size}"/>
      </geometry>
    </visual>

    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>

</robot>
