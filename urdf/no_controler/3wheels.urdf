<?xml version="1.0" encoding="UTF-8"?>
<robot name="3wheels-robot">

  <link name='body'>
    <inertial>
      <mass value="1"/>
      <inertia ixx=".003"  ixy=".003"  ixz="0" iyy=".003" iyz="0" izz="0"/>
    </inertial>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius=".3" length=".05"/>
      </geometry>
    </collision>


    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius=".3" length=".05"/>
      </geometry>
    </visual>

  </link>

  <link name='wheel01'>
    <inertial>
      <mass value=".2"/>
      <inertia ixx=".001"  ixy=".001"  ixz=".001" iyy=".001" iyz=".001" izz=".001"/>
    </inertial>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius=".05"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius=".05"/>
      </geometry>
    </visual>
  </link>

  <joint name="body-wheel01" type="continuous">
    <parent link="body"/>
    <child link="wheel01"/>
    <origin xyz="0 .2 -.03" rpy="0 0 0"/>
    <axis xyz="1 1 1"/>
  </joint>

  <link name='wheel02'>
    <inertial>
      <mass value=".2"/>
      <inertia ixx=".001"  ixy=".001"  ixz=".001" iyy=".001" iyz=".001" izz=".001"/>
    </inertial>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius=".05"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius=".05"/>
      </geometry>
    </visual>
  </link>

  <joint name="body-wheel02" type="continuous">
    <parent link="body"/>
    <child link="wheel02"/>
    <origin xyz="0.1732 -.1 -.03" rpy="0 0 0"/>
    <axis xyz="1 1 1"/>
  </joint>


  <link name='wheel03'>
    <inertial>
      <mass value=".2"/>
      <inertia ixx=".001"  ixy=".001"  ixz=".001" iyy=".001" iyz=".001" izz=".001"/>
    </inertial>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius=".05"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius=".05"/>
      </geometry>
    </visual>
  </link>

  <joint name="body-wheel03" type="continuous">
    <parent link="body"/>
    <child link="wheel03"/>
    <origin xyz="-0.1732 -.1 -.03" rpy="0 0 0"/>
    <axis xyz="1 1 1"/>
  </joint>

  <!-- Add controllers -->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/3wheels</robotNamespace>
    </plugin>
  </gazebo>

</robot>
